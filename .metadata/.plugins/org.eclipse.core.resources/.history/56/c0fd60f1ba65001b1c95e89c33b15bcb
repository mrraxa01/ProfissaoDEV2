package snake;

public class Snake extends Shape {
	
	public Snake() {
		setColor(Constants.SNAKE_COLOR);
		
		//adiciona a cabeça
		Rect rect = new Rect(220,100,6,6);
		addRect(rect);
		
		for(int i = 1; i<Constants.SNAKE_PIECE_SIZE; i++) {
			rect = duplicate(rect);
			rect.setColor(Constants.SNAKE_COLOR);
			addRect(rect);
		}
	}
}
